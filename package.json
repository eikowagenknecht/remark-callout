{
  "name": "remark-callout",
  "version": "0.1.0",
  "description": "A remark plugin to add obsidian style callouts to markdown",
  "author": "rai",
  "keywords": [
    "remark",
    "remark-plugin",
    "markdown",
    "callout",
    "info",
    "warning",
    "danger",
    "tip"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r4ai/remark-callout.git"
  },
  "bugs": {
    "url": "https://github.com/r4ai/remark-callout/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist",
    "!**/*.test.ts",
    "!**/*.spec.ts",
    "!**/*.tsbuildinfo",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest",
    "build": "rimraf dist && concurrently 'bun run build:cjs' 'bun run build:esm'",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "prepublishOnly": "bun run build",
    "check": "bunx @biomejs/biome check --apply .",
    "prepare": "husky install"
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/bun": "^1.0.8",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.0.0",
    "vitest": "^1.3.1"
  }
}
